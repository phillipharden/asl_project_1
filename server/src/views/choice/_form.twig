<div class="mt-5">
{% if choice %}
<h1>Editing Choice</h1>
{% else %}
<h1>Creating a Choice</h1>
{% endif %}


{% if choice %}
	<form action="/choices/{{ choice.id }}" method="post" class="my-3">
	{% else %}
		<form action="/choices" method="post" >
		{% endif %}
		<div class="form-group my-1">
			<label for="name">Name:</label>
            {% if choice %}
			<input class="form-control" type="text" id="name" name="name" value="{{ choice.name }}"/>
            {% else %}
            <input class="form-control" type="text" id="name" name="name"/>
            {% endif %}        
		</div>         
        <input class="btn btn-primary my-1" type="submit" value="Save Choice"/>
        <a class="btn btn-primary" href="/choices">View Choices</a>		
	</form>